<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:state_pressed="true" >
    <shape android:shape="rectangle"  >
      <corners android:radius="3dip" />
      <stroke android:width="1dip" android:color="?attr/colorAccent" />
      <gradient android:angle="-90" android:startColor="?attr/colorPrimary" android:endColor="?attr/colorPrimaryDark"  />
    </shape>
  </item>
  <item android:state_focused="true">
    <shape android:shape="rectangle"  >
      <corners android:radius="3dip" />
      <stroke android:width="1dip" android:color="?attr/colorAccent" />
      <solid android:color="?attr/colorAccent"/>
    </shape>
  </item>
  <item >
    <shape android:shape="rectangle"  >
      <corners android:radius="3dip" />
      <stroke android:width="1dip" android:color="?attr/colorAccent" />
      <gradient android:angle="-90" android:startColor="?attr/colorAccent" android:endColor="?attr/colorAccent" />
    </shape>
  </item>
</selector>