    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="@dimen/recycler_view_left_offset"
        android:clipChildren="false"
        android:overScrollMode="never"
        app:layoutManager="com.studentsearch.xoodle.studentsearch.cardslider.CardSliderLayoutManager"
        app:viewUpdater="com.studentsearch.xoodle.studentsearch.adapter.CardsUpdater"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin_top">

        <ImageView
            android:id="@+id/dept_image"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/image_left_offset"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_dept"
            android:visibility="visible"/>
        <!--android:src="@drawable/ic_dept"-->

        <!-- Dept -->
        <TextSwitcher
            android:id="@+id/ts_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_left_offset"/>

    </FrameLayout>




