<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:clipChildren="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="5dp">

        <FrameLayout
            android:id="@+id/names"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/tv_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="28sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_name_2"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="@dimen/recycler_view_left_offset"
        android:layout_marginLeft="@dimen/recycler_view_left_offset"
        android:clipChildren="false"
        android:overScrollMode="never"
        app:layoutManager="com.studentsearch.xoodle.studentsearch.cardslider.CardSliderLayoutManager"
        app:viewUpdater="com.studentsearch.xoodle.studentsearch.adapter.CardsUpdater"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin_top">

        <ImageView
            android:id="@+id/dept_image"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/image_left_offset"
            android:layout_marginLeft="@dimen/image_left_offset"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_dept"
            android:visibility="visible"/>
        <!--android:src="@drawable/ic_dept"-->

        <!-- Dept -->
        <TextSwitcher
            android:id="@+id/ts_dept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_left_offset"
            android:layout_marginLeft="@dimen/text_left_offset"/>

    </FrameLayout>




    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin_top">

        <ImageView
            android:id="@+id/hall_image"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/image_left_offset"
            android:layout_marginLeft="@dimen/image_left_offset"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_room"
            android:visibility="visible"/>
        <!--android:src="@drawable/ic_dept"-->

        <!-- Dept -->
        <TextSwitcher
            android:id="@+id/ts_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_left_offset"
            android:layout_marginLeft="@dimen/text_left_offset"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin_top">

        <ImageView
            android:id="@+id/roll_no_image"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/image_left_offset"
            android:layout_marginLeft="@dimen/image_left_offset"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_roll_no"
            android:visibility="visible"/>
        <!--android:src="@drawable/ic_dept"-->

        <!-- Dept -->
        <TextSwitcher
            android:id="@+id/ts_roll_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_left_offset"
            android:layout_marginLeft="@dimen/text_left_offset"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin_top">

        <ImageView
            android:id="@+id/username_image"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/image_left_offset"
            android:layout_marginLeft="@dimen/image_left_offset"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mail"
            android:visibility="visible"/>
        <!--android:src="@drawable/ic_dept"-->

        <!-- Dept -->
        <TextSwitcher
            android:id="@+id/ts_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_left_offset"
            android:layout_marginLeft="@dimen/text_left_offset"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin_top">

        <ImageView
            android:id="@+id/blood_group_image"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/image_left_offset"
            android:layout_marginLeft="@dimen/image_left_offset"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_blood_group"
            android:visibility="visible"/>
        <!--android:src="@drawable/ic_dept"-->

        <!-- Dept -->
        <TextSwitcher
            android:id="@+id/ts_blood_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_left_offset"
            android:layout_marginLeft="@dimen/text_left_offset"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_margin_top">

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="@dimen/image_dimen"
            android:layout_height="@dimen/image_dimen"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/image_left_offset"
            android:layout_marginLeft="@dimen/image_left_offset"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home"
            android:visibility="visible"/>
        <!--android:src="@drawable/ic_dept"-->

        <!-- Dept -->
        <TextSwitcher
            android:id="@+id/ts_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_left_offset"
            android:layout_marginLeft="@dimen/text_left_offset"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/facebook2"/>

        <ImageView
            android:id="@+id/mail"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mail3"/>

    </LinearLayout>
</LinearLayout>